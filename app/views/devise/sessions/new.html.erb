<div class="sign-in-page">
  <div class="card">
    <div class="card-header">
      <%= t('.sign_in') %>
    </div>
    <div class="card-body">
      <%= form_with(scope: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: User.human_attribute_name(:email),class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: User.human_attribute_name(:password), class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="sign-in__submit-btn">
          <%= f.submit t('.sign_in'), class: "btn btn-block text-white" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
