<div class="sign-up-page">
  <div class="card">
    <div class="card-header">
      <%= t(".sign_up") %>
    </div>

    <div class="card-body">
      <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: User.human_attribute_name(:email), required: true %>
        </div>

        <div class="form-group">
          <%= f.label :name, class: "sr-only" %>
          <%= f.text_field :name, autocomplete: "name", class: "form-control", placeholder: User.human_attribute_name(:name), required: true %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: User.human_attribute_name(:password), required: true %>
        </div>

        <div class="btn-group btn-group-toggle d-flex mb-3" data-toggle="buttons">
          <label class="btn btn-light flex-fill mr-2 active" id="luser-gender-male">
            <%= f.radio_button :gender, :male, class: "form-check-input bg-primary" %>
            <%= f.label :gender_male, t("enum.user.gender.male"), class: "form-check-label" %>
          </label>
          <label class="btn btn-light flex-fill" id="luser-gender-female">
            <%= f.radio_button :gender, :female, class: "form-check-input" %>
            <%= f.label :gender_female, t("enum.user.gender.female"), class: "form-check-label" %>
          </label>
        </div>

        <div class="sign-up__submit-btn">
          <%= f.submit t('.sign_up'), class: "btn btn-block text-white" %>
        </div>
      <% end %>
      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
