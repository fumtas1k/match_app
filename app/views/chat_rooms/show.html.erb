<div class="chat-room-show-page">
  <nav class="navbar navbar-light chat-room__header">
    <%= link_to matching_index_path, class: "nav-item nav-link" do %>
      <i class="fas fa-chevron-left"></i>
    <% end %>

    <div class="chat-room__partner">
      <span class="chat-room__partner-name">
        <%= @chat_room_user.name %>
      </span>

      <% if @chat_room_user.profile_image.url.nil? %>
        <div class="chat-room__partner-default-img"></div>
      <% else %>
        <%= image_tag @chat_room_user.profile_image.url, class: "chat-room__partner-img" %>
      <% end %>
    </div>
  </nav>

  <div id="messages">
    <%= render @messages, chat_room_user: @chat_room_user %>
  </div>

  <form class="chat-room__message-form">
    <textarea data-behavior="chat_room_speaker" data-chat_room_id=<%= @chat_room.id %> placeholder=<%= t("views.chat_rooms.show.message_form") %>
    class="chat-room__message-form_textarea"></textarea>
  </form>
</div>
